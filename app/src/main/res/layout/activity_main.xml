<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GetPermission Library Demo"
            android:textSize="20sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask For Permissions"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_requestPermissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:text="requestPermissions" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_requestPermissionsWithForce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:text="requestPermissionsWithForce" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_requestPermissionsWithDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:text="requestPermissionsWithDialog" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>